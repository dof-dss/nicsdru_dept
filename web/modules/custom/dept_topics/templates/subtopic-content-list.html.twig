{#
/**
 * @file
 * Theme template for a subtopic content list.
 *
 * Available variables:
 * - title: the title of the subtopic list
 * - content_links: an array of link render elements.
 * - show_more_link: a link back to the subtopic page.
#}
<article class="card">
  {% if title_link %}
  <h2 class="card__title">{{ title_link }}</h2>
  {% endif %}
  <div class="card__content">
    {% if content_summary %}
      {{ content_summary }}
    {% endif %}
    {% if content_links %}
      <ul class="list--hyphen-bullet">
        {% for link in content_links|slice(0, 3) %}
          <li>{{ link }}</li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if read_more_link and content_links|length > 3 %}
      <a class="more" href="{{ read_more_link.url }}">Read more<span class="visually-hidden"> about {{ title }}</span></a>
    {% endif %}
  </div>
</article>
