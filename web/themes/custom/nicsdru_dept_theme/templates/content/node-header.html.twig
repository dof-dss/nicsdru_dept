{% if node_type == "consultation" %}
<div class="consultation-dates">
  {% if consultation_in_progress %}
    <p>
      <strong class="label">{{ 'Consultation closes'|t }}</strong>
      {{ consultation_end_date | date('U') | format_date('medium_date_time') }}
    </p>
  {% elseif consultation_pending %}
    <p>
      <strong class="label">{{ 'Consultation opens'|t }}</strong>
      {{ consultation_start_date | date('U') | format_date('medium_date_time') }}
    </p>
  {% else %}
    <p>
      <strong class="label">{{ 'Consultation closed'|t }}</strong>
      {{ 'Consultation opened'|t }} {{ consultation_start_date | date('U') | format_date('medium_date_time') }}
      {{ 'and closed'|t }} {{ consultation_end_date | date('U') | format_date('medium_date_time') }}
    </p>
  {% endif %}
</div>
{% endif %}
